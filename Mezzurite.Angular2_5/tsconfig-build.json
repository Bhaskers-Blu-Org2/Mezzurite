{
  "compilerOptions": {
      "rootDir": ".",
      "baseUrl": ".",
      "paths": {
          "@angular/*": [
              "../../node_modules/@angular/*"
          ],
          "@rxjs/*": [
              "../../node_modules/rxjs/*"
          ]
      },
      "outDir": "../",
      "declaration": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "moduleResolution": "node",
      "module": "es2015",
      "target": "es2015",
      "lib": [
          "es2015",
          "dom"
      ],
      "skipLibCheck": true,
      "types": ["node"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "inlineSources": true,
      "importHelpers": true
  },
  "files": [
      "public_api.ts"
  ],
  "angularCompilerOptions": {
      "enableResourceInlining": true,
      "skipTemplateCodegen": true,
      "annotateForClosureCompiler": true,
      "strictMetadataEmit": true,
      "flatModuleOutFile": "mezzurite-angular.js",
      "flatModuleId": "@microsoft/mezzurite-angular"
  }
}